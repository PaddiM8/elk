{
    "name": "elk-shell",
    "description": "Language integrations for the elk shell programming language",
    "license": "MIT",
    "version": "0.0.5",
    "publisher": "PaddiM8",
    "repository": "https://github.com/PaddiM8/elk",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "elk",
                "aliases": [
                    "elk"
                ],
                "extensions": [
                    ".elk"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "elk",
                "scopeName": "source.elk",
                "path": "./syntaxes/elk.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.line.elk": "elk"
                }
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Elk configuration",
            "properties": {
                "languageServerExample.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "message",
                    "description": "Traces the communication between VSCode and the language server service."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "deploy": "vsce publish"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.2",
        "@types/node": "^20.8.0",
        "@types/vscode": "^1.82.0",
        "@vscode/test-electron": "^2.3.4",
        "@vscode/vsce": "^3.0.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "source-map-support": "^0.5.21",
        "tmp-promise": "^3.0.3",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver-protocol": "^3.17.5"
    }
}
